<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/greenbackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/viewuserimageview"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/logo"
                android:padding="@dimen/_5sdp"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prasad"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:id="@+id/tvMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91 9876323221"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:src="@drawable/ic_edit" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal"
        android:background="@drawable/whitebackground"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:drawableTint="@color/darkgray"
            android:textSize="@dimen/_17sdp"
            android:drawableStart="@drawable/ic_baseline_home_24"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_margin="@dimen/_4sdp"
            android:padding="@dimen/_10sdp"
            android:drawableEnd="@drawable/ic_arrow_forward"
            android:layout_gravity="center"
            android:textColor="@color/darkgray"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:background="@drawable/whitebackground"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Orders"
                android:textSize="@dimen/_17sdp"
                android:drawableTint="@color/darkgray"
                android:drawableStart="@drawable/ic_truck"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_margin="@dimen/_4sdp"
                android:padding="@dimen/_10sdp"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:layout_gravity="center"
                android:textColor="@color/darkgray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:background="@drawable/whitebackground"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textSize="@dimen/_17sdp"
                android:drawableTint="@color/darkgray"
                android:drawableStart="@drawable/ic_notifications"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_margin="@dimen/_4sdp"
                android:padding="@dimen/_10sdp"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:layout_gravity="center"
                android:textColor="@color/darkgray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:background="@drawable/whitebackground"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="@dimen/_17sdp"
                android:drawableStart="@drawable/ic_sharp_lock_open_24"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_margin="@dimen/_4sdp"
                android:padding="@dimen/_10sdp"
                android:drawableTint="@color/darkgray"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:layout_gravity="center"
                android:textColor="@color/darkgray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:background="@drawable/whitebackground"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="@dimen/_17sdp"
                android:drawableTint="@color/darkgray"
                android:drawableStart="@drawable/ic_settings"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_margin="@dimen/_4sdp"
                android:padding="@dimen/_10sdp"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:layout_gravity="center"
                android:textColor="@color/darkgray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:background="@drawable/whitebackground"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textSize="@dimen/_17sdp"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_margin="@dimen/_4sdp"
                android:padding="@dimen/_10sdp"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:drawableTint="@color/darkgray"
                android:layout_gravity="center"
                android:textColor="@color/darkgray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:background="@drawable/whitebackground"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate Us"
                android:textSize="@dimen/_17sdp"
                android:drawableStart="@drawable/ic_star"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_margin="@dimen/_4sdp"
                android:padding="@dimen/_10sdp"
                android:drawableTint="@color/darkgray"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:layout_gravity="center"
                android:textColor="@color/darkgray"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:background="@drawable/whitebackground"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:textSize="@dimen/_17sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_margin="@dimen/_4sdp"
                android:padding="@dimen/_10sdp"
                android:drawableTint="@color/darkgray"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:layout_gravity="center"
                android:textColor="@color/darkgray"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>